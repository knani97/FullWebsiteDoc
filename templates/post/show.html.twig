{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

<style>
    .forum-content {
        margin-top: 100px;
    }
</style>

<style>
.container {
    margin-top: 100px;
}

.media {
    display: flex;
    flex-direction: row;
}

.media-body {
    flex-grow: 1;
    margin-left: 50px;
}

.views {
    width: 100px;
}

.new-post {
    margin-top: 15px;
    color: white;
    background-color: #4154f1;
    border: none;
    padding: 5px 10px;
    float: right;
}

.new-post a {
    color: white;
}

.comment-card {
    margin-left: auto;
    margin-right: 5%;
    width: 80%;
}
</style>

<div class="inner-main-body p-2 p-sm-3 collapse forum-content show">
    <div class="card mb-2">
        <div class="card-body p-2 p-sm-3">
            <div class="media forum-item">
                <a href="#" data-toggle="collapse" data-target=".forum-content"><img src={{ post.user.image }} class="mr-3 rounded-circle" width="50" alt="User" /></a>
                <div class="media-body">
                    <h6><a href="{{ path('post_show', {'id': post.id}) }}" data-toggle="collapse" data-target=".forum-content" class="text-body">{{ post.title }}</a></h6>
                    <p class="text-secondary">
                        {{ post.body }}
                    </p>
                    </div>
                    <div class="views text-muted small text-center align-self-center">
                        <div class="views text-muted small text-center align-self-center">
                                <span>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i') : '' }}</span>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>
    {% for comment in post.comments %}
        <div class="card mb-2 comment-card">
            <div class="card-body p-2 p-sm-3">
                <div class="media forum-item">
                    <a href="#" data-toggle="collapse" data-target=".forum-content"><img src={{ comment.user.image }} class="mr-3 rounded-circle" width="50" alt="User" /></a>
                    <div class="media-body">
                        <h6><a href="" data-toggle="collapse" data-target=".forum-content" class="text-body">{{ comment.body }}</a></h6>
                        </div>
                        <div class="views text-muted small text-center align-self-center">
                            <div class="views text-muted small text-center align-self-center">
                                    <span>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i') : '' }}</span>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>
        </div>
    {% endfor %}  
    <div class="card mb-2 comment-card">
            <div class="card-body p-2 p-sm-3">
                <h3>Post comment</h3>
                {{ include('comment/_form.html.twig') }}
            </div>
    </div>
</div>  
